file = {:home/ldiaz/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Bodnariuk et al. - 2021 - Interannual Variability of the Latitude of Separation of the Brazil Current Teleconnections and Oceanic Rossby.pdf:pdf},
issn = {21699291},
journal = {Journal of Geophysical Research: Oceans},
keywords = {Brazil Current,ENSO,IOD,Rossby waves,teleconnections},
number = {10},
pages = {1--24},
title = {{Interannual Variability of the Latitude of Separation of the Brazil Current: Teleconnections and Oceanic Rossby Waves Propagation}},
