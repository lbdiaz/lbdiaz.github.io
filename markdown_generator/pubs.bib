issn = {10970088},
journal = {International Journal of Climatology},
keywords = {South Eastern South Amer,agrometeorology,application/context,climate,geographic/climatic zone,observational and satellite-base,physical phenomenon,scale,surface- and satellite-based  ob,tool and methods,total cloud cover},
number = {January},
pages = {1--16},
title = {{Climatology and trends of cloudiness in a productive rice and vegetable region of South-Eastern South America}},
