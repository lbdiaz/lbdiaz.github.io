doi = {10.1002/joc.6643},
file = {:home/ldiaz/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Diaz, Saurral, Vera - 2020 - Assessment of South America summer rainfall climatology and trends in a set of global climate models la(2).pdf:pdf},
issn = {10970088},
journal = {International Journal of Climatology},
keywords = {South America,climate change,large ensembles,model evaluation,precipitation trends},
number = {S1},
pages = {E59--E77},
title = {{Assessment of South America summer rainfall climatology and trends in a set of global climate models large ensembles}},
url = {https://rmets.onlinelibrary.wiley.com/doi/abs/10.1002/joc.6643},
volume = {41},
